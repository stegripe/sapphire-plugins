{
    "name": "@stegripe/pino-logger",
    "version": "1.2.0",
    "description": "A simple logger for Sapphire Framework using Pino.",
    "license": "AGPL-3.0",
    "author": "Stegripe Development <support@stegripe.org>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stegripe/sapphire-plugins.git"
    },
    "bugs": {
        "url": "https://github.com/stegripe/sapphire-plugins/issues"
    },
    "homepage": "https://docs.stegripe.org/modules/_stegripe_pino_logger.html",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "pnpm clean && pnpm typecheck && tsdown",
        "clean": "rimraf dist/ && rimraf turbo/",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "typecheck": "tsc --noEmit"
    },
    "exports": {
        "import": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "require": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "package.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=20.9",
        "npm": ">=10"
    },
    "dependencies": {
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.5",
        "@sapphire/framework": "^5.3.7",
        "@sapphire/utilities": "^3.18.2",
        "discord.js": "^14.22.1",
        "pino": "^9.13.1",
        "typescript": "^5.9.3"
    }
}

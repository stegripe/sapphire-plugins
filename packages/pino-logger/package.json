{
    "name": "@stegripe/pino-logger",
    "version": "1.0.2",
    "description": "A simple logger for Sapphire Framework using Pino.",
    "license": "AGPL-3.0",
    "author": "Stegripe Development <support@stegripe.org>",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stegripe/sapphire-plugins.git"
    },
    "bugs": {
        "url": "https://github.com/stegripe/sapphire-plugins/issues"
    },
    "homepage": "https://docs.stegripe.org/modules/_stegripe_pino_logger.html",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "pnpm typecheck && tsup --config ../../tsup.config.json",
        "lint": "eslint src --cache --cache-file .eslintcache",
        "lint:fix": "eslint src --cache --cache-file .eslintcache --fix",
        "pretty": "prettier --check src/**/*.ts",
        "pretty:write": "prettier --write src/**/*.ts",
        "typecheck": "tsc --noEmit"
    },
    "exports": {
        "import": {
            "types": "./dist/index.d.mts",
            "default": "./dist/index.mjs"
        },
        "require": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        }
    },
    "files": [
        "dist",
        "package.json"
    ],
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=20.9",
        "npm": ">=10"
    },
    "dependencies": {
        "@sapphire/framework": "^5.2.1",
        "@sapphire/utilities": "^3.17.0",
        "discord.js": "^14.15.3",
        "pino": "^9.3.2",
        "tslib": "^2.7.0"
    },
    "devDependencies": {
        "eslint": "^9.13.0",
        "prettier": "^3.3.3",
        "tsup": "^8.2.4",
        "typescript": "^5.6.3"
    }
}
